{
  "name": "always-in-mind",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "express-jwt": "5.3.0",
    "micro": "9.1.0",
    "microrouter": "3.0.0",
    "request": "2.83.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "eslint": "^4.17.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "micro-dev": "^2.2.0",
    "now": "^9.3.0",
    "prettier": "^1.10.2"
  },
  "scripts": {
    "postinstall": "cd client && yarn && cd ..",
    "start": "concurrently \"yarn run devapi\" \"yarn run client\"",
    "devapi": "micro-dev ./api/src/index.js -p 3001",
    "client": "node start-client.js",
    "precommit": "lint-staged",
    "predeploy:api": "now rm -y alwaysinmindapi",
    "deploy:api":
      "now --public deploy api/src && yarn pause && now alias alwaysinmindapi",
    "predeploy:client": "now rm -y alwaysinmind",
    "deploy:client": "cd client && yarn run deploy && cd ..",
    "deploy:both": "yarn run deploy:api && yarn run deploy:client",
    "deploy:clean": "now rm -s alwaysinmind alwaysinmindapi",
    "deploy:ls": "now ls && now alias ls",
    "pause":
      "node -e \"((time) => new Promise((resolve) => setTimeout(resolve, time)))(process.argv[1]).then(() => process.exit(0))\" 3000"
  },
  "lint-staged": {
    "client/src/**/*.{js,jsx,json,css,md}": ["prettier --write", "git add"],
    "api/src/**/*.{js,jsx,json,css,md}": ["prettier --write", "git add"]
  },
  "now": {
    "name": "alwaysinmindapi"
  }
}
