{
  "name": "always-in-mind",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=8.11.3 <=8.12"
  },
  "dependencies": {
    "express-jwt": "5.3.1",
    "micro": "9.3.3",
    "microrouter": "3.1.3",
    "node-readability": "3.0.0",
    "request": "2.88.0",
    "snyk": "^1.104.2"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "micro-dev": "^3.0.0",
    "now": "^11.4.4",
    "prettier": "^1.14.2"
  },
  "scripts": {
    "postinstall": "cd client && yarn && cd ..",
    "start": "concurrently \"yarn run api\" \"yarn run client\"",
    "api": "micro-dev ./api/src/index.js -p 3001",
    "client": "node start-client.js",
    "precommit": "lint-staged",
    "predeploy:api": "now rm -y alwaysinmindapi || exit 0",
    "deploy:api": "now --public deploy api/src && now alias alwaysinmindapi",
    "predeploy:client": "now rm -y alwaysinmind || exit 0",
    "deploy:client": "cd client && yarn run deploy && cd ..",
    "deploy:both": "yarn run deploy:api && yarn run deploy:client",
    "deploy:clean": "now rm -s alwaysinmind alwaysinmindapi",
    "deploy:ls": "now ls && now alias ls",
    "pause": "rem node -e \"((time) => new Promise((resolve) => setTimeout(resolve, time)))(process.argv[1]).then(() => process.exit(0))\" 30000",
    "test": "snyk test",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "lint-staged": {
    "client/src/**/*.{js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "api/src/**/*.{js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "now": {
    "name": "alwaysinmindapi"
  },
  "snyk": true
}
