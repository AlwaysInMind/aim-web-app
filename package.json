{
  "name": "always-in-mind",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "micro": "^9.1.0",
    "micro-route": "^2.5.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2"
  },
  "scripts": {
    "postinstall": "cd client && yarn && cd ..",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/src/index.js",
    "client": "node start-client.js",
    "precommit": "lint-staged",
    "deploy:stage": "now deploy --public && now alias staging-alwaysinmind",
    "deploy:live": "now alias alwaysinmind"
  },
  "lint-staged": {
    "{client|server}/src/**/*.{js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
