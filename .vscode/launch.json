{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API Server",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/server/src",
      "program": "${workspaceFolder}/node_modules/micro/bin/micro.js",
      "args": ["${workspaceFolder}/server/src/index.js", "-p 3001"]
    },
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceRoot}/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    }
  ]
}
